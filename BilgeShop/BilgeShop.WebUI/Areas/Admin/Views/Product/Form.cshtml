@model ProductFormViewModel

<div class="container" style="padding-top:40px">
    <div class="row">
        <div class="col-md-8 offset-2">

            <div class="card" style="border:solid 2px">
                <div class="card-header fw-bold fs-5">
                    @(Model.Id == 0 ? "Ürün Ekleme Formu" : "Ürün Düzenleme Formu")
                </div>
                <div class="card-body">
                    <form method="post" asp-area="Admin" asp-controller="Product" asp-action="Save" enctype="multipart/form-data">
                        @* Dosya eklemek için enctype kısmı yazılmalı*@

                        @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger">
                                @ViewBag.ErrorMessage
                            </div>
                        }

                        <input asp-for="Id" type="hidden" />

                        <div class="form-group mb-2">
                            <label class="required" asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" type="text" />
                            <span class="text-danger fw-bold" asp-validation-for="Name"></span>

                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>    <span class="text-danger fw-bold" asp-validation-for="Description"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="UnitPrice"></label>
                            <input class="form-control" type="text" asp-for="UnitPrice" />    <span class="text-danger fw-bold" asp-validation-for="UnitPrice"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="UnitInStock"></label>
                            <input class="form-control" type="number" asp-for="UnitInStock" />    <span class="text-danger fw-bold" asp-validation-for="UnitInStock"></span>
                        </div>

                        <div class="form-group">
                            <label class="required" asp-for="CategoryId"></label>
                            <select asp-items="@(new SelectList(ViewBag.Categories , "Id" , "Name"))" class="form-control" type="text" asp-for="CategoryId">
                            </select>    <span class="text-danger fw-bold" asp-validation-for="CategoryId"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="File"></label>

                            @if(Model.Id != 0) @*bu bir güncelleme işlemi mi kontrolü*@
                            {
                                @if (!string.IsNullOrWhiteSpace(@ViewBag.ImagePath))
                                {
                                    <div>
                                        <img src="~/images/products/@ViewBag.ImagePath" style="width:200px; height:200px" />
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <img src="~/images/noPhoto.png" style="width:200px; height:200px" />
                                    </div>
                                }
                            }


                            <input asp-for="File" type="file" class="form-control" />
                        </div>




                        <button type="submit" class="btn btn-success mt-3 float-end">@(Model.Id == 0 ? "Kaydet" : "Güncelle")</button>

                    </form>
                </div>

            </div>

        </div>
    </div>
</div>

