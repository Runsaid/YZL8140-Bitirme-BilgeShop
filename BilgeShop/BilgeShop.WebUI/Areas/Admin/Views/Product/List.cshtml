@model List<ProductViewModel>

<div class="container mt-5">

    <div>

        <div class="float-start"> <h2>Ürünler</h2>  </div>
        <div class="float-end"> <a asp-area="Admin" asp-controller="Product" asp-action="New" class="btn btn-success"><i class="bi bi-plus-square"></i> Yeni Ürün</a>   </div>

    </div>


    <div style="padding-top:75px">

        <table id="myTable" class="table table-striped">
            <thead>
                <tr>
                    <th style="width:200px"></th>
                    <th style="width:400px">Ürün Adı</th>
                    <th style="width:200px">Birim Fiyatı</th>
                    <th style="width:200px; text-align:center">Stok Miktarı</th>
                    <th style="width:200px">Kategori</th>
                    <th style="width:300px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            @if (string.IsNullOrWhiteSpace(product.ImagePath))
                            {
                                <img src="~/images/noPhoto.png" style="width:120px; height:120px" />
                            }
                            else
                            {
                                <a href="~/images/products/@product.ImagePath" data-lightbox="@product.Id" data-title="@product.Name">

                                    <img src="~/images/products/@product.ImagePath" alt="@product.Name" style="width:120px; height:120px" />

                                </a>
                            }
                        </td>
                        <td>@product.Name</td>
                        <td>@product.UnitPrice TL</td>
                        <td style="text-align:center">@product.UnitInStock</td>
                        <td>@product.CategoryName</td>
                        <td>

                            <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i> Düzenle</a>
                            <a href="#" data-id="@product.Id" class="btn btn-sm btn-danger delete"><i class="bi bi-trash3"></i> Sil</a>

                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>


</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            $('#myTable').DataTable({

                pageLength: 5,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/tr.json'
                }
            });
        });

        lightbox.option({
            'resizeDuration': 200,
            'wrapAround': true,
            'maxWidth': 1000,
            'maxHeight': 1000
        })

        $('#myTable .delete').click(function (e) {

            e.preventDefault();

            var productId = $(this).data('id');

            Swal.fire({
                title: 'Emin misin?',
                text: "Dikkat ! Ürün silinecektir.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Onaylıyorum.',
                cancelButtonText: "İptal"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/admin/product/delete/' + productId,
                        method: "GET"
                    }).done(function () {

                        Swal.fire(
                            'Silindi!',
                            'Ürün Başarıyla Silindi.',
                            'success'
                        ).then(() => { window.location.reload() }
                        );
                    }).fail(function () {

                        Swal.fire("Hata!", "Bir hata oluştu, ürün silinemedi.", "error")
                    });


                }
            })



        })  


    </script>

                    }